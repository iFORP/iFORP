{
  "name": "iforp-backend",
  "title": "iFORP Backend",
  "description": "iFORP Backend",
  "version": "0.0.0",
  "private": true,
  "homepage": "http://prototyping4innovation.de",
  "license": "MIT",
  "main": "src",
  "author": {
    "name": "Nicolai Süper",
    "email": "n.sueper@micromata.de",
    "url": "http://micromata.de"
  },
  "contributors": [
    {
      "name": "Michael Kühnel",
      "email": "m.kuehnel@micromata.de",
      "url": "http://micromata.de"
    }
  ],
  "repository": "micromata/iforp",
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "engines": {
    "node": "^8.0.0",
    "npm": ">= 3.0.0"
  },
  "scripts": {
    "test": "npm run tslint && jest",
    "test:watch": "jest --watch",
    "tslint": "tslint --project tsconfig.json -c tslint.json -t stylish \"src/**/*.ts\"",
    "tslint:fix": "npm run tslint --silent -- --fix ",
    "start": "ts-node src/index.ts",
    "start:dev": "ts-node-dev --no-notify --transpileOnly src/index.ts",
    "build": "tsc -p .",
    "delete": "npm run delete:database && npm run delete:library",
    "delete:database": "del '*.sqlite'",
    "database:dummyData": "npm run delete:database && echo 'Database deleted' && ts-node src/orm/dummy-data",
    "delete:library": "del -f '../frontend/src/library/**/*' '!.gitkeep'",
    "pretty": "prettier --write \"./src/**/*.{js?(x),ts?(x)}\""
  },
  "dependencies": {
    "@sindresorhus/slugify": "0.3.0",
    "body-parser": "1.18.3",
    "cheerio": "1.0.0-rc.2",
    "cors": "2.8.4",
    "express": "4.16.3",
    "fs-extra": "6.0.1",
    "multer": "^1.3.0",
    "pify": "^3.0.0",
    "reflect-metadata": "0.1.12",
    "sqlite3": "4.0.0",
    "superb": "2.0.0",
    "typeorm": "0.2.5",
    "yauzl": "^2.9.1"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.7",
    "@types/express": "4.11.1",
    "@types/jest": "22.2.3",
    "@types/node": "8.0.29",
    "del-cli": "1.1.0",
    "eslint": "4.19.1",
    "eslint-plugin-jest": "21.15.1",
    "husky": "1.0.0-rc.6",
    "jest": "^22.4.0",
    "lint-staged": "7.1.0",
    "prettier": "1.12.1",
    "sql.js": "0.5.0",
    "supertest": "3.1.0",
    "ts-jest": "^22.4.0",
    "ts-node": "3.3.0",
    "ts-node-dev": "^1.0.0-pre.23",
    "tsc": "1.20150623.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-xo": "^0.8.0",
    "typescript": "^2.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run pretty",
      "npm run tslint:fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.(j|t)s?(x)",
      "!src/orm/dummy-data/**",
      "!src/index.ts",
      "!src/app.ts"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "testMatch": [
      "<rootDir>/__tests__/{unit,integration}/**/*.(j|t)s?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
