{
  "name": "iforp-backend",
  "title": "iFORP Backend",
  "description": "iFORP Backend",
  "version": "0.0.0",
  "private": true,
  "homepage": "http://prototyping4innovation.de",
  "license": "MIT",
  "main": "src",
  "author": {
    "name": "Nicolai Süper",
    "email": "n.sueper@micromata.de",
    "url": "http://micromata.de"
  },
  "contributors": [
    {
      "name": "Michael Kühnel",
      "email": "m.kuehnel@micromata.de",
      "url": "http://micromata.de"
    }
  ],
  "repository": "micromata/iforp",
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "engines": {
    "node": "^8.0.0",
    "npm": ">= 3.0.0"
  },
  "scripts": {
    "test": "npm run eslint && jest",
    "test:watch": "jest --watch",
    "start": "node -r babel-register src/index.js",
    "build": "babel src --out-dir build",
    "eslint": "eslint --ext .js --cache --ignore-path .gitignore src ",
    "eslint:fix": "npm run eslint --silent -- --fix",
    "pretty": "prettier --write \"./src/**/*.{js?(x)}\"",
    "database:dummyData": "npm run delete:database && echo 'Database deleted' && node -r babel-register src/orm/dummy-data",
    "delete": "npm run delete:database && npm run delete:library",
    "delete:database": "del '~/.iforp/database.sqlite'",
    "delete:library": "del -f ~/.iforp/library/"
  },
  "dependencies": {
    "@sindresorhus/slugify": "0.3.0",
    "body-parser": "1.18.3",
    "cheerio": "1.0.0-rc.2",
    "cors": "2.8.4",
    "express": "4.16.3",
    "fs-extra": "6.0.1",
    "multer": "^1.3.0",
    "pify": "^3.0.0",
    "reflect-metadata": "0.1.12",
    "signale": "1.2.0",
    "sqlite3": "4.0.0",
    "superb": "2.0.0",
    "typeorm": "0.2.5",
    "yauzl": "2.9.2",
    "yauzl-promise": "2.1.3"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-jest": "23.0.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "del-cli": "1.1.0",
    "eslint": "4.19.1",
    "eslint-config-baumeister": "1.0.2",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-xo": "0.22.2",
    "eslint-plugin-filenames": "1.2.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jest": "21.15.1",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-unicorn": "4.0.3",
    "eslint-plugin-xo": "1.0.0",
    "husky": "1.0.0-rc.6",
    "jest": "^22.4.0",
    "lint-staged": "7.1.0",
    "prettier": "1.12.1",
    "regenerator-runtime": "0.11.1",
    "sql.js": "0.5.0",
    "supertest": "3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run pretty",
      "npm run eslint:fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/orm/**/*.js",
      "!src/app.js",
      "!src/index.js",
      "!src/get-connection-options.js",
      "!src/get-configuration.js"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "testMatch": [
      "<rootDir>/__tests__/{unit,integration}/**/*.(j|t)s?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ]
  }
}
